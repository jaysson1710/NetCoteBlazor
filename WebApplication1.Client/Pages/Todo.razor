    private IList<TodoItem> todos = new List<TodoItem>();

    private void InsertarFuncion()
    {
        if (!string.IsNullOrEmpty(title))
        {
            var valortexto = title;
            todos.Add(new TodoItem { IsDone = true, Title = title });
        }
        else {
            
        }
    }
}